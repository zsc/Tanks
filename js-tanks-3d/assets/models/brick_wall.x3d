        <Appearance>
          <Material diffuseColor='0.6 0.2 0.1' specularColor='0.1 0.05 0.02' shininess='0.1' ambientIntensity='0.2'/>
          <ImageTexture url='"../images/brick_texture.png"'/>
        </Appearance>
        <Box size='1 1 1'/>
      </Shape>
    </Transform>
    
    <!-- Mortar Lines (simplified) -->
    <!-- Horizontal mortar line 1 -->
    <Transform translation='0 0.25 0.51'>
      <Shape>
        <Appearance>
          <Material diffuseColor='0.7 0.7 0.7' ambientIntensity='0.3'/>
        </Appearance>
        <Box size='1 0.02 0.02'/>
      </Shape>
    </Transform>
    
    <!-- Horizontal mortar line 2 -->
    <Transform translation='0 0 0.51'>
      <Shape>
        <Appearance>
          <Material diffuseColor='0.7 0.7 0.7' ambientIntensity='0.3'/>
        </Appearance>
        <Box size='1 0.02 0.02'/>
      </Shape>
    </Transform>
    
    <!-- Horizontal mortar line 3 -->
    <Transform translation='0 -0.25 0.51'>
      <Shape>
        <Appearance>
          <Material diffuseColor='0.7 0.7 0.7' ambientIntensity='0.3'/>
        </Appearance>
        <Box size='1 0.02 0.02'/>
      </Shape>
    </Transform>
    
    <!-- Vertical mortar lines -->
    <Transform translation='-0.25 0.125 0.51'>
