    </Transform>
    
    <Transform translation='0.25 0.125 0.51'>
      <Shape>
        <Appearance>
          <Material diffuseColor='0.7 0.7 0.7' ambientIntensity='0.3'/>
        </Appearance>
        <Box size='0.02 0.25 0.02'/>
      </Shape>
    </Transform>
    
    <Transform translation='0 -0.125 0.51'>
      <Shape>
        <Appearance>
          <Material diffuseColor='0.7 0.7 0.7' ambientIntensity='0.3'/>
